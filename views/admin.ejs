<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"><title>Document</title>
</head>
<body>
    <h1>Admin Panel</h1>

    <div class="container">
        <div class="row">
          <div class="col-9">

            <div class="card" style="width: 18rem;">
                <img src="https://www.godan.pl/wp-content/uploads/2017/05/calendar-2.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">Kalendarz</h5>
                  <p class="card-text">Kliknij by przejrzec kalendarz</p>
                  <a href="/kalendarz" class="btn btn-primary">Kalendarz</a>
                </div>
              </div>
<br><br><br><br><br>
              <div class="card" style="width: 18rem;">
                <img src="https://www.computerhope.com/jargon/s/settings-generic-gear.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">Ustawienia</h5>
                  <p class="card-text">Ustawienia</p>
                  <a href="http://localhost:3000/admin/ustawienia" class="btn btn-primary">Ustwienia</a>
                </div>
              </div>


          </div>

          <div class="card" style="width: 20rem;">
            <img src="http://zslchrobry.lezajsk.pl/wp-content/uploads/2017/11/users.png" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Lista pracownik√≥w</h5>
              <% pracownicy.forEach(function(o) { %>
                <li class="pracownicy"><%= o.imie %> - <%= o.nazwisko %> <%= o.nr_telefonu  %></li>
            <% }); %>
              <p class="card-text">...</p>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Dodaj nowego pracownika
              </button>
            </div>
            
          </div>
          
        </div>
      </div>

      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Dodaj pracownika</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form method="post" action="http://localhost:3000/admin/pracownik" enctype="application/json">
                
               <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <input type="text" name="imie" class="form-control" placeholder="Imie *" value="" />
                        </div>
                        <br>
                        <div class="form-group">
                          <input type="text" name="nazwisko" class="form-control" placeholder="Nazwisko *" value="" />
                      </div>
                      <br>
                      <div class="form-group">
                        <input type="text" name="specjalizacja" class="form-control" placeholder="specjalizacja *" value="" />
                    </div>
                    
                        <br>
                        <div class="form-group">
                            <input type="text" name="nr_telefonu" class="form-control" placeholder="Nr Telefonu *" value="" />
                        </div>
                        <br>
                        
                    </div>
                    
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                  <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            </form>
            </div>
            
          </div>
        </div>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<style type="text/css">
   
    h1{
        justify-content: center;
        text-align: center;
        font-size: 75px;
        color: white;
    }

    html, body {
  width: 100%;
  height:100%;
}

body {
    background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
}

.pracownicy{
  
}

.pracownicy:hover{
  font-size: 20px;
  background-color:rgb(208, 233, 245);
  border-radius:10px;
}

@keyframes gradient {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

</style>
</body>
</html>